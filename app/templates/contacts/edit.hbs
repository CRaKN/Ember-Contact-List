<form class="well">
  <h3>Edit Contact Information</h3>
  <div class="form-group">
    {{#form-control as |error|}}
    <label>First Name</label> {{input type="text" class="form-control" value=model.firstName placeholder="First Name" required=true}}
    {{#if error}}
    <p>{{error}}</p>
    {{/if}} {{/form-control}}
  </div>
  <div class="form-group">
    {{#form-control as |error|}}
    <label>Last Name</label> {{input type="text" class="form-control" value=model.lastName placeholder="Last Name" required=true}}
    {{#if error}}
    <p>{{error}}</p>
    {{/if}} {{/form-control}}
  </div>
  <div class="form-group">
    {{#form-control as |error|}}
    <label>Email</label> {{input type="text" class="form-control" value=model.email placeholder="Email" type="email" required=true}}
    {{#if error}}
    <p>{{error}}</p>
    {{/if}} {{/form-control}}
  </div>
  <div class="form-group">
    {{#form-control as |error|}}
    <label>Phone Number</label> {{input type="text" class="form-control" value=model.phoneNumber placeholder="Phone Number" type='tel' required=true}}
    {{#if error}}
    <p>{{error}}</p>
    {{/if}} {{/form-control}}
  </div>
  <button {{action 'editContact' model.id}} class="btn btn-primary">Submit</button>
</form>